 
Screen:

    MDCard:
        size_hint: None, None
        size: 300, 450
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 65
        spacing: 35
        orientation: 'vertical'
        MDIcon:
            icon: 'account'
            icon_color: 0,0,0,0
            haling: 'center'
            font_size: 180
        MDTextFieldRound:
            id: user
            icon_left: 'account-check'
            hint_text: "Username"
            foreground_color: 0,0,0,1
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: password
            icon_left: "key-variant"
            hint_text: "Password"
            foreground_color: 0,0,0,1
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.5}
            password: True
        BoxLayout:

            spacing: 10
            MDFillRoundFlatButton:
                text: "LOG IN"
                font_size: 15

                on_press: app.login()

            MDFillRoundFlatButton:
                text: "ClOSE"
                font_size: 15
                pos_hint: {'right': 0}
                on_press: app.close()
